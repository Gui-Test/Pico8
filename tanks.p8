pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
--player

x = 60
y = 60
sped = 2

function _draw()

  cls(1)
  spr(1,x,y)
  if ((btn(⬅️))and(btn(⬆️))) or ((btn(⬅️))and(btn(⬇️))) or ((btn(➡️))and(btn(⬆️))) or ((btn(➡️))and(btn(⬇️))) then sped = 0
  
  if (btn(⬅️)) x -= sped
  if (btn(➡️)) x += sped
  if (btn(⬆️)) y -= sped
  if (btn(⬇️)) y += sped
  
  
  
end
